<form action="/courses/edit/" method="POST">
  <input type="hidden" name="id" value="{{course.id}}">
  <div class="form-group">
    <label for="name">Название курса</label>
    <input type="text" class="form-control" id="name" name="title" required value="{{course.title}}">
  </div>
  <div class="form-group">
    <label for="price">Цена курса</label>
    <input type="number" class="form-control" id="price" name="price" required min="1" value="{{course.price}}">
  </div>
  <div class="form-group">
    <label for="img">URL картинки</label>
    <input type="text" class="form-control" id="img" name="img" required value="{{course.img}}">
  </div>
  <button type="submit" class="btn btn-success">Сохранить</button>
</form>